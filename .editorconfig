# EditorConfig is awesome: https://editorconfig.org

# top-most file
root = true

[*]
charset      = utf-8
end_of_line  = lf
indent_style = tab
indent_size  = 4
tab_width    = 4
insert_final_newline     = true
trim_trailing_whitespace = true

[{Makefile,Makefile.*,*.mk}]
indent_style = tab
tab_width    = 8

[*.md]
indent_style = spaces
indent_size  = 2
trim_trailing_whitespace = false

[*.gp]
indent_style = spaces
